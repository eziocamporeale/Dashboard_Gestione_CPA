# Configurazione Monitoraggio Dashboard Gestione CPA
# Copia questo file in .env e modifica i valori secondo le tue esigenze

ENABLE_MONITORING=true
MONITORING_LOG_LEVEL=INFO

# Configurazione monitor sistema
SYSTEM_MONITOR_INTERVAL=60
SYSTEM_METRICS_HISTORY_SIZE=1000

# Configurazione monitor database
DATABASE_MONITOR_INTERVAL=300
DATABASE_METRICS_HISTORY_SIZE=100

# Soglie di allarme aggiuntive
CPU_CRITICAL_THRESHOLD=95.0
MEMORY_CRITICAL_THRESHOLD=95.0
DISK_CRITICAL_THRESHOLD=95.0
DATABASE_QUERY_WARNING_THRESHOLD=1000.0
DATABASE_SIZE_WARNING_THRESHOLD=100.0

# Configurazione notifiche
NOTIFICATION_EMAIL=admin@example.com
NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/xxx/yyy/zzz

# Configurazione esportazione
METRICS_EXPORT_FORMAT=json
METRICS_EXPORT_INTERVAL=3600

# Configurazione retention
METRICS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90
